{
    "description": "A secure, modular school ERP system using CodeIgniter 3.1.13 and PHP 8.4.2.",
    "type": "project",
    "require": {
        "php": ">=8.4.2",
        "firebase/php-jwt": "^6.8",               // JWT for stateless authentication
        "vlucas/phpdotenv": "^5.5",              // Environment variable management
        "symfony/var-dumper": "^6.4",            // For debugging
        "monolog/monolog": "^3.5",               // Advanced logging
        "paragonie/random_compat": "^9.99",      // Backward compatibility for cryptography
        "codeigniter/framework": "3.1.13"        // CodeIgniter 3.1.13
    },
    "require-dev": {
        "phpunit/phpunit": "^10.3",              // Unit testing
        "friendsofphp/php-cs-fixer": "^3.20"     // PHP coding standards fixer
    },
    "autoload": {
        "psr-4": {
            "App\\": "application/"
        },
        "classmap": [
            "application/third_party/",
            "application/core/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\"",
            "@php artisan key:generate"
        ],
        "start": "php -S localhost:8080 -t public"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
